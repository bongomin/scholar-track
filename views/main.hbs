                              <div class="col-sm-6">
                                 <input type="file" class="custom-file-input" id="customFile" style="height: 80px;">
                              </div>
                           </div>
                           <a class="btn btn-default pull-right"
                              style="background:darkblue;color:aliceblue;">register</a>
                           <span class="pull-left" onclick="changeback()" style="cursor: pointer;"> <i
                                 class="fa fa-arrow-left" style="font-size:20px;color:darkblue;"></i> Back </span>

                        </div>
                     </div>
                  </div>

               </form>

            </div>
