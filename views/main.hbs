<link rel="stylesheet" href="/public/stylesheets/style.css">
<div class="menus">
   <div class="row">
      <ul class="nav nav-tabs">
         <li class="active"><a onclick="studentsFunction()">Register Student</a></li>
         <li><a onclick="parentsFunction()">Register Parent</a></li>
         <li><a onclick="reportsFunction()">Reports</a></li>
         <li><a onclick="scholarsFunction()">Scholars</a></li>
      </ul>
   </div>

</div>
<div class="container-fluid" style="margin-top: 5px;">
   <div class="row">
      <div id="studentsdiv" style="display:none ;">
         {{!-- students left menu --}}
         <div class="col-md-2 col-sm-2 hidden-xs">
            <div class="row">
               <div class="card">
                  <ul class="list-group">
                     <li class="list-group-item">register Students</li>
                     <li class="list-group-item">Students</li>
                     <li class="list-group-item">Reports</li>
                  </ul>
               </div>
            </div>
         </div>
         {{!-- students right content --}}
         <div class="col-md-10 col-sm-10">
            <div class="registerStudentForm">
               <form action="">
                  <div class="form-group col-md-6">
                     <input type="text" class="form-control" placeholder="Sponsorship Number example U2345xxxxxx">
                  </div>
                  <div class="form-group m-0 p-0 col-md-6">
                     <input type="text" class="form-control" placeholder="Full Name">
                  </div>
                  <div class="form-group col-md-6">
                     <input type="date" class="form-control" placeholder="Date of Birth ">
                  </div>
                  <div class="form-group m-0 p-0 col-md-6">
                     <select class="form-control" id="exampleFormControlSelect1">
                        <option>Female</option>
                        <option>Male</option>
                        <option>Others</option>
                     </select>
                  </div>
                  <div class="form-group col-md-6">
                     <input type="text" class="form-control" placeholder="Religion /Faith ">
                  </div>
                  <div class="form-group col-md-6">
                     <input type="text" class="form-control" placeholder="Class / Educational Level ">
                  </div>
                  <div class="form-group col-md-6">
                     <input type="text" class="form-control" placeholder="Place of Residence / Country and City ">
                  </div>
                  <div class="form-group col-md-6">
                     <input type="text" class="form-control" placeholder="Parents Contact ">
                  </div>
                  <div class="form-group col-md-6">
                     <input type="text" class="form-control" placeholder="Email @example.com">
                  </div>
                  <div class="form-group col-md-6">
                     <label for="customFile" class="col-sm-4 col-form-label">Passport image</label>
                     <div class="col-sm-6">
                        <input type="file" class="custom-file-input" id="customFile" style="height: 80px;">
                     </div>
                  </div>
                  <a href="" class="btn btn-default" style="background: rgba(128, 128, 128, 0.109);">Register</a>
               </form>

            </div>
         </div>
      </div>
      <div id="parentsdiv" style="display:none ;">
         {{!-- Parents left menu --}}
         <div class="col-md-2 col-sm-2 hidden-xs">
            <div class="row">
               <div class="card">
                  <ul class="list-group">
                     <li class="list-group-item">register parent</li>
                     <li class="list-group-item">All Parents info</li>
                  </ul>
               </div>
            </div>
         </div>
         <div class="col-md-10"> parents right</div>
      </div>
      <div id="reportsdiv" style="display:none ;">
         {{!-- Reports left menu --}}
         <div class="col-md-2 col-sm-2 hidden-xs">
            <div class="row">
               <div class="card">
                  <ul class="list-group">
                     <li class="list-group-item">Anual Repors</li>
                     <li class="list-group-item">Termly Reports</li>
                     <li class="list-group-item">General Reports</li>
                  </ul>
               </div>
            </div>
         </div>
         <div class="col-md-10"> here div</div>
      </div>
      <div id="scholarsdiv" style="display:none ;">
         <div class="col-md-2">scholars left</div>
         <div class="col-md-10"> here div</div>
      </div>

   </div>
</div>
<script>
   function studentsFunction() {
      document.getElementById('studentsdiv').style.display = "block"
      document.getElementById('parentsdiv').style.display = "none"
      document.getElementById('reportsdiv').style.display = "none"
      document.getElementById('scholarsdiv').style.display = "none"
   }

   function parentsFunction() {
      document.getElementById('studentsdiv').style.display = "none"
      document.getElementById('parentsdiv').style.display = "block"
      document.getElementById('reportsdiv').style.display = "none"
      document.getElementById('scholarsdiv').style.display = "none"
   }

   function reportsFunction() {
      document.getElementById('studentsdiv').style.display = "none"
      document.getElementById('parentsdiv').style.display = "none"
      document.getElementById('reportsdiv').style.display = "block"
      document.getElementById('scholarsdiv').style.display = "none"
   }
   function scholarsFunction() {
      document.getElementById('studentsdiv').style.display = "none"
      document.getElementById('parentsdiv').style.display = "none"
      document.getElementById('reportsdiv').style.display = "none"
      document.getElementById('scholarsdiv').style.display = "block"
   }

</script>