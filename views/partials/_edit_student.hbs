<div class="registerStudentForm">
   <form action="/student/edit/{{student.id}}?_method=PUT" method="PUT">
      <input type="hidden" name="_method" value="PUT">
      <div id="studentForm">
         <div class="panel panel-primary">
            <div class="panel-heading" style="background: darkblue;">
               <i class="fa fa-pencil" style="font-size: 16px;" aria-hidden="true"></i> &nbsp
               Edit Students Info
            </div>
            <div class="panel-body">
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.sponsorship_No}}" name="sponsorship_No"
                     placeholder="Sponsorship Number example U2345xxxxxx">
               </div>
               <div class="form-group m-0 p-0 col-md-6">
                  <input type="text" class="form-control" value="{{student.full_name}}" name="full_name"
                     placeholder="Full Name">
               </div>
               <div class="form-group col-md-6">
                  <input type="date" class="form-control" value="{{student.dob}}" name="dob"
                     placeholder="Date of Birth ">
               </div>
               <div class="form-group m-0 p-0 col-md-6">
                  <select class="form-control" value="{{student.gender}}" name="gender" id="exampleFormControlSelect1">
                     <option>Female</option>
                     <option>Male</option>
                     <option>Others</option>
                  </select>
               </div>
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.religion}}" name="religion"
                     placeholder="Religion /Faith ">
               </div>
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.class}}" name="class"
                     placeholder="Class / Educational Level ">
               </div>
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.residence}}" name="residence"
                     placeholder="Place of Residence / Country and City ">
               </div>
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.contact}}" name="contact"
                     placeholder="Parents Contact ">
               </div>
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.email}}" name="email"
                     placeholder="Email @example.com">
               </div>
               <div class="form-group col-md-6">
                  <label for="customFile" class="col-sm-4 col-form-label">Passport image</label>
                  <div class="col-sm-6">
                     <input type="file" value="{{student.passport_img}}" name="passport_img" class="custom-file-input"
                        id="customFile" style="height: 80px;">
                  </div>
               </div>
               <span class="pull-right" onclick="next()" style="cursor: pointer;"> Next <i class="fa fa-arrow-right"
                     style="font-size:20px;color:darkblue;"></i></span>
            </div>
         </div>
      </div>
      <div id="parentForm" style="display: none;">
         <div class="panel panel-primary">
            <div class="panel-heading" style="background: darkblue;">
               <i class="fa fa-pencil" style="font-size: 16px;" aria-hidden="true"></i> &nbsp
               Edit Students Parents Info
            </div>
            <div class="panel-body">
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.p_first_name}}" name="p_first_name"
                     placeholder="Parent's First Name">
               </div>
               <div class="form-group m-0 p-0 col-md-6">
                  <input type="text" class="form-control" value="{{student.p_second_name}}" name="p_second_name"
                     placeholder="Parent's Second Name">
               </div>
               <div class="form-group col-md-6">
                  <input type="number" class="form-control" value="{{student.p_age}}" name="p_age" placeholder="Age ">
               </div>
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.p_occupation}}" name="p_occupation"
                     placeholder="Occupation ">
               </div>
               <div class="form-group m-0 p-0 col-md-6">
                  <select class="form-control" value="{{student.p_relationship}}" name="p_relationship"
                     id="exampleFormControlSelect1">
                     <option>Relationship to Child</option>
                     <option>Father</option>
                     <option>Mother</option>
                     <option>Gurdian</option>
                  </select>
               </div>
               <div class="form-group col-md-6">
                  <input type="number" class="form-control" value="{{student.p_no_siblings}}" name="p_no_siblings"
                     placeholder="Number of Siblings ">
               </div>
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.p_contact}}" name="p_contact"
                     placeholder="Contact ie +256 07xxxx ">
               </div>
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{p_residence}}" name="p_residence"
                     placeholder="Place of Residence / Country and City ">
               </div>
               <div class="form-group col-md-6">
                  <input type="text" class="form-control" value="{{student.p_email}}" name="p_email"
                     placeholder="Parents emial @xxx ">
               </div>
               <div class="form-group col-md-6">
                  <label for="customFile" class="col-sm-5 col-form-label">Map attouchment</label>
                  <div class="col-sm-6">
                     <input type="file" value="{{student.p_map}}" name="p_map" class="custom-file-input" id="customFile"
                        style="height: 80px;">
                  </div>
               </div>
               <button type="submit" class="btn btn-default pull-right"
                  style="background:darkblue;color:aliceblue;">register</button>
               <span class="pull-left" onclick="back()" style="cursor: pointer;"> <i class="fa fa-arrow-left"
                     style="font-size:20px;color:darkblue;"></i> Back </span>
            </div>
         </div>
      </div>
   </form>
</div>