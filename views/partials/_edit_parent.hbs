<div class="registerparentdiv">
   <form action="/Parents/{{parent.id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <div class="panel panel-primary">
         <div class="panel-heading" style="background: darkblue;">Edit Parent's Infomation</div>
         <div class="panel-body">
            <div class="form-group col-md-6">
               <input type="text" name="p_first_name" value="{{parent.p_first_name}}" class="form-control"
                  placeholder="Parent's First Name">
            </div>
            <div class="form-group m-0 p-0 col-md-6">
               <input type="text" name="p_second_name" value="{{parent.p_second_name}}" class="form-control"
                  placeholder="Parent's Second Name">
            </div>
            <div class="form-group col-md-6">
               <input type="number" name="p_age" value="{{parent.p_age}}" class="form-control" placeholder="Age ">
            </div>
            <div class="form-group col-md-6">
               <input type="text" name="p_occupation" value="{{parent.p_occupation}}" class="form-control"
                  placeholder="Occupation ">
            </div>
            <div class="form-group m-0 p-0 col-md-6">
               <select class="form-control" name="p_relationship" id="exampleFormControlSelect1">
                  <option>Relationship to Child</option>
                  <option>Father</option>
                  <option>Mother</option>
                  <option>Gurdian</option>
               </select>
            </div>
            <div class="form-group col-md-6">
               <input type="number" class="form-control" name="p_no_siblings" value="{{parent.p_no_siblings}}"
                  placeholder="Number of Siblings ">
            </div>
            <div class="form-group col-md-6">
               <input type="text" class="form-control" name="p_contact" value="{{parent.p_contact}}"
                  placeholder="Contact ie +256 07xxxx ">
            </div>
            <div class="form-group col-md-6">
               <input type="text" class="form-control" name="p_residence" value="{{parent.p_residence}}"
                  placeholder="Place of Residence / Country and City ">
            </div>
            <div class="form-group col-md-6">
               <input type="text" name="sponsorship_No" value="{{parent.sponsorship_No}}" class="form-control"
                  placeholder="Student's Sponsorship number example U123 xxx ">
            </div>
            <div class="form-group col-md-6">
               <label for="customFile" class="col-sm-5 col-form-label">Map attouchment</label>
               <div class="col-sm-6">
                  <input type="file" name="location_map" class="custom-file-input" id="customFile"
                     style="height: 80px;">
               </div>
            </div>
            <button type="submit" class="btn btn-default pull-right" style="background:darkblue;color:aliceblue;">
               <i class="fa fa-sign-out" aria-hidden="true"></i>
               Update Info</button>
         </div>
      </div>
   </form>
</div>