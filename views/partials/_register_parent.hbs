<div class="registerparentdiv">
   <form action="">
      <div class="panel panel-primary">
         <div class="panel-heading" style="background: darkblue;">Register Student's Parent</div>
         <div class="panel-body">
            <div class="form-group col-md-6">
               <input type="text" class="form-control" placeholder="Parent's First Name">
            </div>
            <div class="form-group m-0 p-0 col-md-6">
               <input type="text" class="form-control" placeholder="Parent's Second Name">
            </div>
            <div class="form-group col-md-6">
               <input type="number" class="form-control" placeholder="Age ">
            </div>
            <div class="form-group col-md-6">
               <input type="text" class="form-control" placeholder="Occupation ">
            </div>
            <div class="form-group m-0 p-0 col-md-6">
               <select class="form-control" id="exampleFormControlSelect1">
                  <option>Relationship to Child</option>
                  <option>Father</option>
                  <option>Mother</option>
                  <option>Gurdian</option>
               </select>
            </div>
            <div class="form-group col-md-6">
               <input type="number" class="form-control" placeholder="Number of Siblings ">
            </div>
            <div class="form-group col-md-6">
               <input type="text" class="form-control" placeholder="Contact ie +256 07xxxx ">
            </div>
            <div class="form-group col-md-6">
               <input type="text" class="form-control" placeholder="Place of Residence / Country and City ">
            </div>
            <div class="form-group col-md-6">
               <input type="text" class="form-control" placeholder="Student's Sponsorship number example U123 xxx ">
            </div>
            <div class="form-group col-md-6">
               <label for="customFile" class="col-sm-5 col-form-label">Map attouchment</label>
               <div class="col-sm-6">
                  <input type="file" class="custom-file-input" id="customFile" style="height: 80px;">
               </div>
            </div>
            <a class="btn btn-default pull-right" style="background:darkblue;color:aliceblue;">register</a>
         </div>
      </div>
   </form>
</div>