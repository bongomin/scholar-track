<style>
   .fa:hover {
      cursor: pointer;

   }
</style>
<div class="registerStudentForm">
   <div id="allstudents">
      <div class="panel panel-primary">
         <div class="panel-heading" style="background: darkblue;">All Students</div>
         <div class="panel-body">
            <table class="table table-hover table-dark" style="font-size: 12px;">
               <thead>
                  <tr>
                     <th scope="col">Sponsorship_No</th>
                     <th scope="col">Full Names</th>
                     <th scope="col">Gender</th>
                     <th scope="col">Faith</th>
                     <th scope="col">Class</th>
                     <th scope="col">Residence</th>
                     <th scope="col">contact</th>
                     <th scope="col">Action</th>
                  </tr>
               </thead>
               <tbody>
                  {{#each students}}
                  <tr>
                     <td>{{sponsorship_No}}</td>
                     <td style="  text-transform: capitalize;">{{full_name}}</td>
                     <td>{{gender}}</td>
                     <td style="  text-transform: capitalize;">{{religion}}</td>
                     <td style="  text-transform: capitalize;">{{class}}</td>
                     <td style="  text-transform: capitalize;">{{residence}}</td>
                     <td>{{contact}}</td>
                     <td>
                        <a href="">
                           <i class="fa fa-trash" style="color:red" aria-hidden="true"></i>
                        </a>
                        &nbsp <a href="Student/edit/{{id}}">
                           <i class="fa fa-pencil-square-o" style="color: green;" aria-hidden="true"></i>
                        </a>
                        &nbsp
                        <a href="">
                           <i class="fa fa-crosshairs" style="color:darkblue;" aria-hidden="true"> more info</i>
                        </a>



                     </td>
                  </tr>
                  {{else}}
                  <p>No Students Registered</p>
                  {{/each}}
               </tbody>
            </table>

         </div>
      </div>
   </div>

</div>