<style>
   .fa:hover {
      cursor: pointer;
   }
</style>
{{> _msg}}
<div class="registerStudentForm">
   <div id="allstudents">
      <div class="panel panel-primary">
         <div class="panel-heading" style="background: darkblue;">All Students</div>
         <div class="panel-body">
            <div class="row">
               <table class="table table-hover table-dark" style="font-size: 12px;">
                  <thead>
                     <tr>
                        <th scope="col">Sponsorship_No</th>
                        <th scope="col">Full Names</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Faith</th>
                        <th scope="col">Class</th>
                        <th scope="col">Residence</th>
                        <th scope="col">contact</th>
                        <th scope="col">Action</th>
                     </tr>
                  </thead>
                  <tbody>
                     {{#each students}}
                     <tr>
                        <td>{{sponsorship_No}}</td>
                        <td style="  text-transform: capitalize;">{{full_name}}</td>
                        <td>{{gender}}</td>
                        <td style="  text-transform: capitalize;">{{religion}}</td>
                        <td style="  text-transform: capitalize;">{{student_class}}</td>
                        <td style="  text-transform: capitalize;">{{residence}}</td>
                        <td>{{contact}}</td>
                        <td>
                           {{!-- <form action="/student/{{id}}?_method=DELETE" method="post">
                              <input type="hidden" name="_method" value="Delete">
                              <button type="submit" class="btn btn-danger pull-left ">
                                 <i class="fa fa-trash"></i>
                              </button>
                           </form> --}}
                           <a class="btn btn-danger" href="#myModal" class="trigger-btn" data-toggle="modal">
                              <i class="fa fa-trash" style="color:white" aria-hidden="true"></i>
                           </a>
                           <a class="btn btn-primary" style="margin-left:2px;" href="student/edit/{{id}}">
                              <i class="fa fa-pencil-square-o " style="color:white; " aria-hidden="true"></i>
                           </a>
                           <a href="student/studentInfo/{{id}}" class="btn btn-success" style="margin-left:2px;">
                              <i class="fa fa-info " style="color:white; " aria-hidden="true"></i>
                           </a>
                        </td>
                     </tr>
                     {{else}}
                     <p>No Students Registered</p>
                     {{/each}}
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>

</div>