<style>
   .nav-tabs li {
      cursor: pointer;
      font-size: 11px;
      font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
   }

   a {
      text-decoration: none;
   }

   * a {
      text-decoration: none;

   }

   .menus {
      margin-top: 10px;

   }

   .card ul li:hover {
      border-right: 5px solid darkblue;
      color: darkblue;
      cursor: pointer;
   }
</style>
<div class="container">
   <div class="menus" style="margin-top: 60px;">
      <div class="row">
         <ul class="nav nav-tabs">
            <li class="active"><a href="/student/register_student">Students</a></li>
            <li><a href="/Parents/register_parent">Parents</a></li>
            <li><a href="/student/reports">Reports</a></li>
            <li><a>Scholars</a></li>
         </ul>
      </div>
   </div>
   <div class="container-fluid" style="margin-top: 5px;">
      <div class="row">
         <div id="registerStudentDiv">
            {{!-- students left menu --}}
            <div class="col-md-2 col-sm-2 hidden-xs">
               <div class="row">
                  <div class="card">
                     <ul class="list-group">
                        <a href="/student/register_student">
                           <li class="list-group-item" style="text-decoration: none;">
                              <i class="fa fa-pencil" aria-hidden="true"></i>
                              &nbsp register Students
                           </li>
                        </a>
                        <a href="/student">
                           <li class="list-group-item" style="text-decoration: none;">
                              <i class="fa fa-users" aria-hidden="true"></i>
                              &nbsp Students
                           </li>
                        </a>
                        <a href="">
                           <li class="list-group-item" style="text-decoration: none;">
                              <i class="fa fa-snowflake-o" aria-hidden="true"></i>
                              &nbsp Reports
                           </li>
                        </a>
                        <a href="">
                           <li class="list-group-item" style="text-decoration: none;">
                              <i class="fa fa-folder-open" aria-hidden="true"></i>
                              &nbsp FeedBacks
                           </li>
                        </a>
                        <a href="">
                           <li class="list-group-item" style="text-decoration: none;">
                              <i class="fa fa-university" aria-hidden="true"></i>
                              &nbsp Home Visits
                           </li>
                        </a>
                     </ul>
                  </div>
                  {{#each errors}}
                  <div class="alert alert-danger">{{text}}</div>
                  {{else}}
                  {{/each}}
               </div>
            </div>
            {{!-- students right content --}}
            <div class="col-md-10 col-sm-10">
               {{>_edit_student}}
            </div>
         </div>

      </div>
   </div>

</div>
<script>
   function next() {
      document.getElementById('studentForm').style.display = "none"
      document.getElementById('parentForm').style.display = "block"
   }
   function back() {
      document.getElementById('studentForm').style.display = "block"
      document.getElementById('parentForm').style.display = "none"
   }

</script>